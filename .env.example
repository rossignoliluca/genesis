# Genesis MCP - Environment Variables
# Copy this file to .env and fill in your API keys
# chmod 600 .env  # Secure your keys!

# ============================================================================
# LOCAL LLM (FREE) - Recommended!
# ============================================================================

# Ollama - https://ollama.ai/download
# Install: curl -fsSL https://ollama.ai/install.sh | sh
# Pull model: ollama pull mistral
USE_OLLAMA=true
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# ============================================================================
# CLOUD LLM (PAID) - Fallback when local unavailable
# ============================================================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic - https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# RECOMMENDED - Core MCP servers
# ============================================================================

# Google Gemini (web search) - https://aistudio.google.com/apikey
GEMINI_API_KEY=AIza...

# Brave Search - https://brave.com/search/api/
BRAVE_API_KEY=BSA...

# ============================================================================
# OPTIONAL - Enhanced capabilities
# ============================================================================

# GitHub (repository access) - https://github.com/settings/tokens
# Needed for GitHub MCP write operations (create repos, push, PR)
# Generate a Personal Access Token (classic) with 'repo' scope
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_...

# Firecrawl (web scraping) - https://firecrawl.dev/
FIRECRAWL_API_KEY=fc-...

# Exa Search - https://exa.ai/
EXA_API_KEY=...

# Stability AI (image generation) - https://platform.stability.ai/
STABILITY_AI_API_KEY=sk-...

# Wolfram Alpha - https://developer.wolframalpha.com/
WOLFRAM_APP_ID=...

# Semantic Scholar (academic papers) - FREE API key to avoid rate limits
# Get key at: https://www.semanticscholar.org/product/api#api-key-form
SEMANTIC_SCHOLAR_API_KEY=...

# ============================================================================
# OPTIONAL - Cloud services
# ============================================================================

# AWS (for future S3/Lambda integration)
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1

# ============================================================================
# GENESIS CONFIGURATION
# ============================================================================

# MCP Mode: real | simulated | hybrid
GENESIS_MCP_MODE=real

# Enable MCP debug logging
GENESIS_MCP_LOG=false

# LLM defaults
GENESIS_LLM_PROVIDER=openai
GENESIS_LLM_MODEL=gpt-4o

# ============================================================================
# v7.23 - AUTONOMOUS LAYER
# ============================================================================

# Economic Layer
# Stripe (payments & treasury) - https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=rk_test_...
# Coinbase Developer Platform - https://cdp.coinbase.com/
CDP_API_KEY_NAME=...
CDP_API_KEY_PRIVATE_KEY=...

# Deployment Layer
# Vercel - https://vercel.com/account/tokens
VERCEL_API_TOKEN=vck_...
# Cloudflare - https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=...
CLOUDFLARE_ACCOUNT_ID=...
# Supabase - https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://...supabase.co
SUPABASE_KEY=...

# Production Memory
# Pinecone (vectors) - https://app.pinecone.io/
PINECONE_API_KEY=pcsk_...
PINECONE_INDEX=genesis
# Neo4j (graph) - https://neo4j.com/cloud/aura/
NEO4J_URI=neo4j+s://...
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=...
NEO4J_DATABASE=neo4j

# Communication
# Slack - https://api.slack.com/apps
# v7.24: slack-mcp-server requires XOXP tokens (user OAuth) not bot tokens
# Generate from: api.slack.com/apps → OAuth & Permissions → User OAuth Token
SLACK_MCP_XOXP_TOKEN=xoxe.xoxp-...
